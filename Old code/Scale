def book():
  src=makePicture("C:\Users\mum\Desktop\Falmouth\comp120-tinkering-graphics-1\Energy_Powerup.png")
  canvas = makeEmptyPicture(500,500)
  sourceX=104
  for targetX in range(0, getWidth(src)):
    sourceY = 104
    for targetY in range(0, getHeight(src)):
      color=getColor(getPixel(src,sourceX,sourceY))
      setColor(getPixel(canvas,targetX,targetY),color)
      sourceY=sourceY+2
    sourceX=sourceX+2
  show(canvas)

def scaleDown(pic, dest):
  skipRow = "false"
  skipCol = "false"
  destX = 1
  for picX in range(1, getWidth(pic)):
    if skipRow == "true":
      skipRow = "false"
    else:
      skipRow = "true"
      destY = 1
      for picY in range(1, getHeight(pic)):
        if skipCol == "true":
          skipCol = "false"
        else:
          skipCol = "true"
          picPixel = getPixel(pic, picX, picY)
          destPixel = getPixel(dest, destX, destY)
          setColor(destPixel, getColor(picPixel))
          destY = destY + 1
      destX = destX + 1


def scale():
  pic = makePicture("C:\Users\mum\Desktop\Falmouth\comp120-tinkering-graphics-1\Energy_Powerup.png")
  destWidth=getWidth(pic)/2
  destHeight=getHeight(pic)/2
  destPic=makeEmptyPicture(destWidth, destHeight)
  show(pic)
  show(destPic)
  scaleDown(pic, destPic)
  repaint(destPic)
  
    
  #make image scale inward
  for i in range(2, -2):
    picWidth = picWidth * i/2